{
    "manifest_version": 2,
    "name": "Big Blue Button Autostatus",
    "version": "0.1",
    "author": "Christopher Besch",
    "description": "A set of Big Blue Button Tools.",

    "permissions": ["notifications", "tabs", "storage"],
    "background": {
        "page": "out/background.html",
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://*.bigbluebutton.org/*"],
            "js": ["out/content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "out/popup.html"
    },
    "options_ui": {
        "page": "out/options.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "bbb_autostatus@christopher-besch",
            "strict_min_version": "60.0b5"
        }
    },
    "commands": {
        "toggle-raise": {
            "suggested_key": { "default": "Ctrl+Shift+U" },
            "description": "Toggle raised hand"
        }
    }
}
