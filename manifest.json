{
    "manifest_version": 2,
    "name": "Big Blue Button Autostatus",
    "version": "0.1",
    "author": "Christopher Besch",
    "description": "A set of Big Blue Button Tools.",

    "permissions": ["notifications", "tabs"],
    "background": {
        "page": "out/background.html",
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://*.bigbluebutton.org/*"],
            "js": ["out/content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "out/popup.html"
    }
}
